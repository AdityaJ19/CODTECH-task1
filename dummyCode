#include <stdio.h>
#include <stdlib.h>

int str_len(char* str){
    int len = 0;
    while(str[len] != '\0'){
        len++;
    }
    return len;
}

char* compressString(char* string){
    int len = str_len(string);

    char* output = (char*)malloc((len+1)*sizeof(char));
    int k = 0;

    for(int i = 0; i<len; i++){
        while(string[i] == string[i+1]){
            k++;

            if(string[k] > len){
                return string;
            }
        }
    }
    output[k] = '\0';
    return output;
}

int main(){
    char* string[100];
    printf("Enter the string: ");
    fgets(string, sizeof(string), stdin);

    char* output = compressString(*string);
    printf("The output of the compressed string is: %s", output);
    free(output);
    return 0;
    
}
